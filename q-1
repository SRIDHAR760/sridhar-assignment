 Import necessary libraries
import requests

# API key for OpenWeatherMap
api_key = '98f115ba6712979e5b43e8de85f21642'

# Function to fetch weather data for a specified location
def fetch_weather_data(location):
    url = f'http://api.openweathermap.org/data/2.5/weather?q={location}&appid={api_key}&units=metric'
    response = requests.get(url)
    data = response.json()
    return data


def display_weather_data(data):
    if data['cod'] == 200:
        print(f"Weather in {data['name']} - Temperature: {data['main']['temp']}Â°C, Conditions: {data['weather'][0]['description']}, Humidity: {data['main']['humidity']}%, Wind Speed: {data['wind']['speed']} m/s")
    else:
        print("Error fetching weather data.")

# User input for location
location = input("Enter a city name or coordinates: ")
weather_data = fetch_weather_data(location)
display_weather_data(weather_data)
